# ============================
# MoonDust Stack - .env File
# ============================

# ----------------------------
# Port Configurations
# ----------------------------
NGINX_PORT=80              # Public port for NGINX
KEYCLOAK_PORT=8081         # Public port for Keycloak (mapped from 8080 in container)
POSTGRES_PORT=5432         # Postgres (expose only if needed)

# ----------------------------
# PostgreSQL Database Config
# ----------------------------
POSTGRES_DB=moondust
POSTGRES_USER=moondust
POSTGRES_PASSWORD=moondust  # Change in production

# PostgreSQL Schemas
POSTGRES_SCHEMA_SYS=md_sys
POSTGRES_SCHEMA_APP=md_app
POSTGRES_SCHEMA_KEYCLOAK=keycloak

# ----------------------------
# Keycloak Admin Credentials
# ----------------------------
KC_BOOTSTRAP_ADMIN_USERNAME=admin
KC_BOOTSTRAP_ADMIN_PASSWORD=admin  # Change in production

# Optional (useful for templating)
KEYCLOAK_BASE_URL=http://localhost:${KEYCLOAK_PORT}
