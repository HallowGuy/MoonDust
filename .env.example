# --- Database (PostgreSQL)
PGHOST=db
PGUSER=postgres
PGPASSWORD=postgres
PGDATABASE=moondust
PGPORT=5432

POSTGRES_DB=moondust
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# --- Backend
BACKEND_PORT_HOST=5001
BACKEND_PORT_CONTAINER=5001
BACKEND_CONTAINER_NAME=backend

# --- Frontend (Nginx)
FRONTEND_CONTAINER_NAME=frontend
FRONTEND_PORT_HOST=3002
FRONTEND_PORT_CONTAINER=80

# --- Frontend build-time API base (optional)
# If unset, the app defaults to '/api' and uses Nginx proxy
# VITE_API_URL=http://localhost:5001/api

# --- Database container
DB_IMAGE=postgres:15
DB_CONTAINER_NAME=postgres_db
DB_PORT_HOST=5432
DB_PORT_CONTAINER=5432

# --- PgAdmin (optional; use with profile "pgadmin")
PGADMIN_IMAGE=dpage/pgadmin4
PGADMIN_CONTAINER_NAME=pgadmin
PGADMIN_PORT_HOST=5050
PGADMIN_PORT_CONTAINER=80
PGADMIN_DEFAULT_EMAIL=admin@admin.com
PGADMIN_DEFAULT_PASSWORD=admin

# --- Activepieces (optional) â€” requires Redis and Postgres
# Port on the host for the UI/API
AP_PORT_HOST=8080
# Optional DB name used in the Compose default
AP_DB_NAME=activepieces
# Provide strong secrets in production
AP_ENCRYPTION_KEY=0123456789abcdef0123456789abcdef
AP_JWT_SECRET=dev_jwt_secret_please_change
# External URLs
AP_FRONTEND_URL=http://localhost:8080
AP_WEBHOOK_URL=http://localhost:8080
# Telemetry
AP_TELEMETRY_ENABLED=false
